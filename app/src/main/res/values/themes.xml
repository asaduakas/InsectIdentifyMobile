<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InsectIdentify" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightCyan</item>
        <item name="colorPrimaryVariant">@color/lightCyan</item>
        <item name="colorOnPrimary">@color/lightBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/lightBackground</item>
    </style>

    <!-- Main TextView style. -->
    <style name="MainTextView" parent="@style/Theme.Material3.Light">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Answer Insect Name style. -->
    <style name="AnswerTextView" parent="@style/Theme.Material3.Light">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Small Answer style. -->
    <style name="SmallAnswerTextView" parent="@style/Theme.Material3.Light">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--- Dicho buttons style. -->
    <style name="diButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/lightCyan</item>
    </style>

    <!--- Filled buttons style. -->
    <style name="fillButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:colorAccent">@color/lightBlue</item>
        <item name="backgroundTint">@color/lightBlue</item>
    </style>

    <!--- Empty buttons style. -->
    <style name="empButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="backgroundTint">@color/lightBackground</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>

    <!--- Question buttons style. -->
    <style name="queButton" parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:icon">@drawable/ic_help_outline_black_48dp</item>
        <item name="icon">@drawable/ic_help_outline_black_48dp</item>
    </style>


</resources>